@model BTH.Models.BMIModel

@{
    ViewBag.Title = "Tính chỉ số BMI";
}

<h2>Tính chỉ số BMI</h2>

@using (Html.BeginForm("Index", "BMI", FormMethod.Post))
{
    <div class="form-group">
        <label for="Weight">Cân nặng (kg):</label>
        @Html.TextBoxFor(m => m.Weight, new { @class = "form-control", type = "number", step = "0.1" })
        @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Height">Chiều cao (m):</label>
        @Html.TextBoxFor(m => m.Height, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(m => m.Height, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Tính BMI</button>
}

@if (ViewBag.BMIResult != null)
{
    <div class="alert alert-info mt-3">
        <strong>Kết quả:</strong> @ViewBag.BMIResult
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
