@model BTH.Models.GradeModel
@{
    ViewData["Title"] = "Grade Calculator";
}

<h2>Grade Calculator</h2>

<form asp-action="CalculateGrade" method="post">
    <div>
        <label for="A">Grade A (40%):</label>
        <input type="number" step="0.1" id="A" name="A" required />
    </div>
    <div>
        <label for="B">Grade B (30%):</label>
        <input type="number" step="0.1" id="B" name="B" required />
    </div>
    <div>
        <label for="C">Grade C (30%):</label>
        <input type="number" step="0.1" id="C" name="C" required />
    </div>
    <button type="submit">Calculate Final Grade</button>
</form>

@if (ViewBag.FinalGrade != null)
{
    <p>Your Final Grade: @ViewBag.FinalGrade</p>
}
